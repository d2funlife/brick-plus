<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tetris">
    <Style x:Key="ModeItem" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource SystemColorControlAccentBrush}"/>
    </Style>
    <Style x:Key="ModeOverlayItem" TargetType="Grid">
        <Setter Property="Opacity" Value="0.25"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style x:Key="ModeName" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45.5"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="20,0,20,0"/>
    </Style>
    <Style x:Key="ModeBestTitle" BasedOn="{StaticResource ModeName}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
    </Style>
    <Style x:Key="ModeBestValue" BasedOn="{StaticResource ModeName}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
    </Style>
</ResourceDictionary>